<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="240dp"
        android:layout_height="216dp"
        android:layout_alignBottom="@+id/text_view_countdown"
        android:layout_marginBottom="-57dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/purple_circle"
        app:tint="@android:color/holo_purple" />


    <TextView
        android:id="@+id/text_view_whatTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_view_countdown"
        android:layout_marginBottom="121dp"
        android:fontFamily="casual"
        android:text="Let's get started!"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="casual"
        android:text="00:10"
        android:textColor="@android:color/black"
        android:textSize="60sp" />

    <Button
        android:id="@+id/button_start_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_countdown"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="112dp"
        android:fontFamily="casual"
        android:text="start"
        app:backgroundTint="#805BC3"/>

    <Button
        android:id="@+id/button_start_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_countdown"
        android:layout_marginStart="-91dp"
        android:layout_marginLeft="-91dp"
        android:layout_marginTop="175dp"
        android:layout_toEndOf="@+id/button_start_pause"
        android:layout_toRightOf="@+id/button_start_pause"
        android:fontFamily="casual"
        android:text="reset"
        android:visibility="invisible"
        tools:visibility="visible"
        app:backgroundTint="#805BC3" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="358dp"
        android:layout_marginRight="358dp"
        android:layout_marginBottom="19dp"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/text_view_starsCount"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView4"
        android:layout_alignRight="@+id/imageView4"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_marginEnd="-75dp"
        android:layout_marginRight="-75dp"
        android:layout_marginBottom="9dp"
        android:text="= 0"
        android:textSize="25sp" />


</RelativeLayout>